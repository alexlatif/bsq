/// READ LINE BY LINE

	FILE *file = fopen ( filename, "r" );
	int i, 
	int	j;
	char arra[128][128];
	char line[128]; /* or other suitable maximum line size */
	for(i=0; i<128; i++)
	    for(j=0; j<128; j++)
	        arra[j] = '\0';
	        for(i=0; i<128; i++)
	            line = '\0';
	            if ( file != NULL )
	            {
                    i=0;
                    while ( fgets ( line, sizeof line, file ) != NULL ) /* read a line */
                    {
                    strcpy(arra, line);
                    printf("array ----> %s ", &arra);
                    i++;
                }

